<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maldo.instacloning.UploadActivity">


    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_below="@+id/iv_upload"
        android:layout_centerHorizontal="true"
        android:onClick="BtnUploadCamera"/>

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Gallery"
        android:layout_below="@+id/btn_upload"
        android:layout_centerHorizontal="true"
        android:onClick="BtnGallery"/>

    <Button
        android:id="@+id/btn_upload2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etCaption"
        android:text="diupload dong mas"
        android:onClick="BtnUpload"/>

    <EditText
        android:id="@+id/etCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Caption"
        android:padding="10dp"
        android:layout_below="@+id/btn_gallery" />

</RelativeLayout>
